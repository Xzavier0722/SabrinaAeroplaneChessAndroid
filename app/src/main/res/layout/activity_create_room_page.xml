<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomPage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <com.upowarz.aeroplane_chess.IconButton
            android:id="@+id/btnCreateBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:text="@string/back"></com.upowarz.aeroplane_chess.IconButton>
        <TextView
            android:id="@+id/txView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of member"
            android:textSize="25sp"
            android:layout_below="@+id/btnCreateBack"></TextView>
        <Spinner
            android:id="@+id/spRoomMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txView1"
            ></Spinner>
        <TextView
            android:id="@+id/txView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Type"
            android:layout_below="@+id/spRoomMember"
            android:textSize="25sp"></TextView>
        <RadioButton
            android:id="@+id/rBtnPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txView2"
            android:text="public"
            android:textSize="25sp"></RadioButton>
        <RadioButton
            android:id="@+id/rBtnPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rBtnPublic"
            android:text="private"
            android:textSize="25sp"></RadioButton>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rBtnPrivate"
            android:text="Create"
            android:textSize="20sp"
            android:background="@drawable/selector_normal_button"></Button>



    </RelativeLayout>

  </ScrollView>