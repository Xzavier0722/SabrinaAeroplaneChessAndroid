<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayerPage"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:scaleType="center"></ImageView>
        <RadioGroup
            android:id="@+id/rdBtnG1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/edTxV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                ></EditText>
            <RadioButton
                android:id="@+id/rdBtnB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robot"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnB3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_margin="10dp"
                ></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/green"
            android:scaleType="center"></ImageView>
        <RadioGroup
            android:id="@+id/rdBtnG2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/edTxV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                ></EditText>
            <RadioButton
                android:id="@+id/rdBtnGG1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robot"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnGG2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnGG3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_margin="10dp"
                ></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/red"
            android:scaleType="center"></ImageView>
        <RadioGroup
            android:id="@+id/rdBtnG3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/edTxV3"
                ></EditText>
            <RadioButton
                android:id="@+id/rdBtnR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robot"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnR3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_margin="10dp"
                ></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/yellow"
            android:scaleType="center"></ImageView>
        <RadioGroup
            android:id="@+id/rdBtnG4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/edTxV4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                ></EditText>
            <RadioButton
                android:id="@+id/rdBtnY1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robot"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnY2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player"
                android:layout_margin="10dp"></RadioButton>
            <RadioButton
                android:id="@+id/rdBtnY3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_margin="10dp"
                ></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <com.upowarz.aeroplanechess.IconButton
        android:id="@+id/btnStartSingle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/aeroplane"
        android:layout_margin="20dp"
        android:background="@drawable/selector_normal_button"
        ></com.upowarz.aeroplanechess.IconButton>
</LinearLayout>